<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_6BB467</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <!--ripple的颜色-->
        <item name="colorControlHighlight">@color/colorAccent</item>
        <!--选中时的颜色-->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <!--未选中的颜色-->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="bottom_normal_text">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/color_6BB467</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>
