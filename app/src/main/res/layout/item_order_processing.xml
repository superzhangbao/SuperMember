<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground">

    <!--第一部分头部-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

        <ImageView
                android:id="@+id/iv_time"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/time"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_toEndOf="@+id/iv_time"
                android:text="2019-05-05 12:43"
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4.5dp"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:textSize="15sp"
                android:textColor="@color/color_6BB467"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_EBECF0"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <!--第二部分，内容区域-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

        <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/color_6BB467"
                android:layout_marginTop="15dp"/>

        <LinearLayout
                android:layout_toEndOf="@+id/iv_goods_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14.5dp"
                android:layout_marginBottom="15dp">

            <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="会费缴纳"
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"/>

            <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="会员卡号：18374543445"
                    android:textSize="12sp"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="7dp"/>
            <TextView
                    android:id="@+id/tv_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="获赠积分："
                    android:textSize="12sp"
                    android:textColor="@color/color_999999"
                    android:visibility="gone"/>
            <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="订单编号：CN13558633377"
                    android:textSize="12sp"
                    android:textColor="@color/color_999999"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_one_amount_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000."
                        android:textSize="17sp"
                        android:textColor="@color/color_222222"/>

                <TextView
                        android:id="@+id/tv_one_amount_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="13sp"
                        android:textColor="@color/color_222222"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textSize="12sp"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="end"/>
        </LinearLayout>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_EBECF0"/>
    <!--第三部分-->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="6dp">

        <TextView
                android:id="@+id/tv_all_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共10件商品，实付款:"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"/>

        <TextView
                android:id="@+id/tv_all_amount_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000."
                android:textSize="17sp"
                android:textColor="@color/color_222222"/>

        <TextView
                android:id="@+id/tv_all_amount_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="13sp"
                android:textColor="@color/color_222222"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end">

        <TextView
                android:id="@+id/tv_fail_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失败原因"
                android:textSize="13sp"
                android:textColor="@color/color_FF2020"
                android:background="@drawable/text2_selector"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:visibility="gone"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/tv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传凭证"
                android:textSize="13sp"
                android:textColor="@color/color_6BB467"
                android:background="@drawable/text_selector"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/tv_courier_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递单号"
                android:textSize="13sp"
                android:textColor="@color/color_6BB467"
                android:background="@drawable/text_selector"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/tv_receice_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textSize="13sp"
                android:textColor="@color/color_6BB467"
                android:background="@drawable/text_selector"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/tv_order_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单二维码"
                android:textSize="13sp"
                android:textColor="@color/color_6BB467"
                android:background="@drawable/text_selector"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>