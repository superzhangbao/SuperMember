<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/common_toolbar"/>

    <TextView
            android:id="@+id/tv_welcome_login"
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_login"
            android:textSize="25sp"
            android:textColor="@color/color_262626"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv_login_2title"
            android:layout_below="@+id/tv_welcome_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_second_title"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"/>

    <EditText
            android:layout_below="@+id/tv_login_2title"
            android:id="@+id/et_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="63dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:inputType="number"
            android:hint="@string/please_input_phonenumber"
            android:maxLength="11"
            android:textAlignment="center"
            android:textColor="@color/color_262626"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="20sp"
            android:background="@drawable/login_et_bg"
            android:padding="10dp"/>


    <TextView
            android:id="@+id/tv_login_agreement"
            android:layout_below="@+id/et_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_agreement"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/color_262626"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"/>
    <Button
            android:id="@+id/btn_login"
            android:layout_below="@+id/tv_login_agreement"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29.5dp"
            android:layout_width="179dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_login_bg"
            android:text="发送短信验证码"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29.5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_notice"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_gravity="center_horizontal"/>
</RelativeLayout>