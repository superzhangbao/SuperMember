<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:background="@drawable/dialog_normal"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/dialog_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="是否预约申请开票"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="24dp"
                    android:background="#D2D2DA" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/cancle"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_left_selector"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#D2D2DA" />

            <TextView
                    android:id="@+id/down"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_right_selector"
                    android:gravity="center"
                    android:text="去申请"
                    android:textColor="#0080FC"
                    android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>